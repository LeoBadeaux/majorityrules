<html lang="en-CA">
	<head>
		<meta charset="UTF-8" />
		<meta content="#2e1532" name="theme-color">
		<meta content="#2e1532" name="apple-mobile-web-app-status-bar-style">
		<meta content="width=device-width,height=device-height,initial-scale=1,user-scalable=no,viewport-fit=cover" name="viewport">
		<meta http-equiv="X-UA-Compatible" content="ie=edge" />
		<title></title>
		<link rel="manifest" href="manifest.json" />
		<meta name="description" content="Hello World PWA">
		<!-- ios support -->
		<link rel="apple-touch-icon" href="/assets/majorityrules2-72_x_72.png" />
		<link rel="apple-touch-icon" href="/assets/majorityrules2-96_x_96.png" />
		<link rel="apple-touch-icon" href="/assets/majorityrules2-128_x_128.png" />
		<link rel="apple-touch-icon" href="/assets/majorityrules2-144_x_144.png" />
		<link rel="apple-touch-icon" href="/assets/majorityrules2-152_x_152.png" />
		<link rel="apple-touch-icon" href="/assets/majorityrules2-192_x_192.png" />
		<link rel="apple-touch-icon" href="/assets/majorityrules2-384_x_384.png" />
		<link rel="apple-touch-icon" href="/assets/majorityrules2-512_x_512.png" />
		<meta content="black-translucent" name="apple-mobile-web-app-status-bar-style">
		<meta content="no-store" http-equiv="Cache-Control">
		<meta name="theme-color" content="#ffffff" />
		<meta content="yes" name="apple-mobile-web-app-capable">
		<meta content="yes" name="mobile-web-app-capable">
	</head>
	<body style="margin: 0">
		<img class="logo" id="gameLogo" src="">
		<div class="nextgame" id="nextGameText"></div>
		<div class="gamestatus" id="nextGameInfo"></div>
		<div class="profilecard"></div>
		<div class="startbtn" id="inviteBtn"></div>

		<!-- Live Game View -->
		<div class="liveGameView" style="margin: 0">
			
			<div class="gameStats" id="gameStats">
				<img class="gameIcon" id="gameIcon" src="/assets/logo.svg">
			   <span class="viewCount" id="viewCount">0</span>
			</div>

			<!-- Live Stream Player -->
			<script src="https://cdn.bootcss.com/flv.js/1.5.0/flv.js"></script>
			<video id="videoElement" webkit-playsinline="true" playsinline="true" autoplay="true" muted="muted"></video></video>

			<div class="questionWindow" id="questionWindow">
				<div class="countdown" id="countdown"></div>
				<div class="questionText" id="questionText">Question Text Goes Here</div>
				<div class="questionInfo" id="questionInfo">
					<span class="questionCount" id="questionCount"></span>
				</div>
			</div>
			
		<div class="toastWindow" id="toastWindow">
			<img class="toastIcon" id="toastIcon" src="/assets/majorityrules2-72_x_72.png">
			<div class="toastText" id="toastText">Toast Text Goes Here</div>
		</div>

		<script type="text/javascript" src="/js/schedule/api.js"></script>
		<script type="text/javascript" src="/js/schedule/config.js"></script>
		<script type="text/javascript" src="/js/liveGame.js"></script>
		<script type="text/javascript" src="/js/notifications.js"></script>
		<link rel="stylesheet" href="/css/schedule.css"/>
		<link rel="stylesheet" href="/css/debug.css"/>
		<link rel="stylesheet" href="/css/liveGame.css"/>
	</body>
</html>